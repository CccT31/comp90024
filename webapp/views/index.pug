doctype html
html
  head
    title= title
    script(src="javascripts/constants.js")
    script webapp.server = 'http://#{dbip}:5984/'
    script(defer src="javascripts/index.js")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://www.gstatic.com/charts/loader.js")
  body
    h1= title
    select(id="topic")
      each i in ['Geo-wise comparison', 'Time-wise comparison']
        option= i
    select(id="designSelector")
      each i in ["polarity", "temper", "attitude", "introspection", "sensitivity"]
        option= i
    select(id="saSelector")
      each i in ['sa4', 'sa3', 'sa2']
        option= i
    select(id="year")
      option 2014-2015
    div(id="legend" style="width:400px")
      div(id="valueMin") min
      div(class="color-key")
        span(id="data-caret") â—†
      div(id="valueMax") max
    div(id="tooltip" style="visibility: hidden; position: absolute; top: 20px; left: 20px; z-index: 1")
      span(id="tooltiptext")
    div(id="map" style="height:400px; width:400px")
    script(defer src="https://maps.googleapis.com/maps/api/js?key="+key+"&callback=webapp.init&v=weekly")
    div(id="chart" style="display:none; width:400px; height:400px")
